<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DrawerUI.Account">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/homegradient" />


        <ImageView
            android:id="@+id/BackChal"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back"
            android:tint="#fff"
            android:padding="3dp" />
        <ImageView
            android:id="@+id/settings_account"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_marginRight="20dp"
            android:src="@drawable/settings"
            android:tint="#fff"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:fontFamily="@font/ubunturegular"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:textSize="15dp"/>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/pro_back"
        >
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ProPicCard"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp"
        app:cardElevation="14dp"
        android:layout_marginTop="145dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/account_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/user_placeholder"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ProPicCard"
        android:text="Mr.X"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/ubuntu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/user_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name_text"
        android:text="+918917351934"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/ubunturegular"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/edit_profile_button"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:layout_marginTop="240dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="15dp"
        android:elevation="3dp"
        app:cardBackgroundColor="#9C27B0">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="3dp"
            android:elevation="4dp"
            android:background="@drawable/edit"
            android:layout_marginLeft="5dp"
            android:tint="#fff"
            />
        <TextView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Edit Profile"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="3dp"
            android:textColor="#E4FFFFFF"
            android:fontFamily="@font/ubunturegular"
            />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/cards"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/user_phonenumber"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#9C27B0"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Subscriptions"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubunturegular"
                android:textColor="#ffffff"
                android:textSize="15dp"
                />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#9C27B0"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Bills and payments"
                android:layout_gravity="center|top"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubunturegular"
                android:textColor="#ffffff"
                android:textSize="15dp"
                />


        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Address_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/cards"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address :"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/account_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:minLines="2"
            android:layout_marginTop="20dp"
            android:text="Text book press colony \nQrs 2RA91 unit III BBSR, 751001 \nContact: 8917351934\n "
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@color/colorPrimary"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/email_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/Address_card"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/account_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:minLines="2"
            android:layout_marginTop="20dp"
            android:text="pareshsahoo902@gmail.com"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@color/colorPrimary"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/email_card"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My OTP :"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:minLines="2"
            android:layout_marginTop="20dp"
            android:text="MIlky Moo :  987214"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@color/colorPrimary"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>