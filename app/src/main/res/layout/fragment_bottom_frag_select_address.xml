<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/selectaddress"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomSheetUI.BottomFragSelectAddress">

    <TextView
        android:id="@+id/TextField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your current pincode"
        android:fontFamily="@font/ubunturegular"
        android:layout_gravity="top|center"
        android:layout_marginTop="55dp"
        android:textSize="13dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/result_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Dont deliver here ! please Contact us or wait till we notify ."
        android:fontFamily="@font/ubunturegular"
        android:layout_gravity="top|center"
        android:layout_marginTop="140dp"
        android:visibility="invisible"
        android:textSize="11dp"
        android:textColor="@android:color/holo_red_light"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#f8f8f8"
        app:cardCornerRadius="9dp"
        app:cardElevation="3dp">

        <EditText
            android:id="@+id/Edit_Location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:maxLength="6"
            android:textSize="12dp"
            android:inputType="number"
            android:fontFamily="@font/ubunturegular"
            android:textColor="#343D5E"
            android:textColorHint="#BDBDBD"
            android:hint="Type Pincode"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#00000000"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/adrestext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="address"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/ubuntu"
        android:minLines="2"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:elevation="7dp"
        android:weightSum="2">


    <androidx.cardview.widget.CardView
        android:id="@+id/SelectButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1.3"
        app:cardBackgroundColor="#9C27B0"
        app:cardCornerRadius="9dp"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ubunturegular"
            android:text="Select"
            android:textColor="#FFFFFF"
            android:textSize="13dp" />

    </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>