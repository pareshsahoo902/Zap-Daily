<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomSheetUI.BottomFragPay">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:text="Delivering to : "
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/userad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubunturegular"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17dp"
            android:text="user address "
            android:layout_marginRight="50dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="end"
            android:gravity="center"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/trxt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Bill Payment: "
            android:layout_margin="20dp"
            android:fontFamily="@font/ubuntu"/>
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/trxt0"
           app:cardCornerRadius="6dp"
           android:elevation="3dp"
           >
           <ImageView
               android:id="@+id/billimage"
               android:layout_width="100dp"
               android:layout_height="120dp"
               android:scaleType="fitCenter"
               android:background="@drawable/placeholderproductmedium"
               android:layout_gravity="center_vertical|start"
               android:layout_marginLeft="40dp"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="end|center_vertical"
               android:layout_margin="30dp"
               android:padding="5dp">
               <TextView
                   android:id="@+id/billprice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="17dp"
                   android:textColor="@color/colorPrimaryDark"
                   android:text="Price :"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="@font/ubunturegular"/>
               <TextView
                   android:id="@+id/billQuantity"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="17dp"
                   android:textColor="@color/colorPrimaryDark"
                   android:text="Quantity :"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="@font/ubunturegular"/>
               <TextView
                   android:id="@+id/noofdeliveries"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="17dp"
                   android:textColor="@color/colorPrimaryDark"
                   android:text="Total Delivery:"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="@font/ubunturegular"/>

               <TextView
                   android:id="@+id/billpprice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="17dp"
                   android:textColor="@color/colorPrimaryDark"
                   android:text="Total Amount :"
                   android:layout_marginBottom="10dp"
                   android:fontFamily="@font/ubunturegular"/>

           </LinearLayout>



       </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_PAY"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ubunturegular"
            android:text="PAY"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

    </androidx.cardview.widget.CardView>


</FrameLayout>